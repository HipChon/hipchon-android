<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardElevation="4dp"
        app:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_item_result_product_thumbnail"
                android:layout_width="350dp"
                android:layout_height="166dp"
                android:background="@drawable/ic_launcher_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_item_result_product_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/bg_rectangle_radius_5"
                android:paddingHorizontal="9dp"
                android:paddingVertical="4dp"
                android:text="특별 할인"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/iv_item_result_product_thumbnail"
                app:layout_constraintTop_toTopOf="@id/iv_item_result_product_thumbnail" />

            <ImageView
                android:id="@+id/iv_item_result_product_like"
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="@id/iv_item_result_product_thumbnail"
                app:layout_constraintTop_toTopOf="@id/iv_item_result_product_thumbnail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:text="1 / 8"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/iv_item_result_product_thumbnail"
                app:layout_constraintEnd_toEndOf="@id/iv_item_result_product_thumbnail" />

            <TextView
                android:id="@+id/tv_item_result_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="16dp"
                android:text="[강원도] 러스틱 라이프 카페"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_item_result_product_thumbnail" />

            <TextView
                android:id="@+id/tv_item_result_product_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="3월 둘째주까지 특별 할인"
                android:textColor="@color/gray05"
                app:layout_constraintStart_toStartOf="@id/tv_item_result_product_title"
                app:layout_constraintTop_toBottomOf="@id/tv_item_result_product_title" />

            <ImageView
                android:id="@+id/iv_item_result_product_save"
                android:layout_width="15dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toBottomOf="@id/iv_item_result_product_thumbnail"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="14dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_item_result_product_price"
                android:layout_width="wrap_content"
                android:text="1,000,000원부터"
                app:layout_constraintTop_toBottomOf="@id/tv_item_result_product_desc"
                android:layout_marginTop="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="14dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
