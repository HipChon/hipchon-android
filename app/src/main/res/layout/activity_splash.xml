<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_splash_background">

        <TextView
            android:id="@+id/tv_splash_title_top"
            style="@style/Gmarket.Weight500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="90dp"
            android:text="촌스러운 것이"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_splash_under_top"
            android:layout_width="29dp"
            android:layout_height="@dimen/spacing_4"
            android:layout_marginStart="@dimen/spacing_2"
            android:background="@color/primary_green"
            app:layout_constraintStart_toStartOf="@id/tv_splash_title_top"
            app:layout_constraintTop_toBottomOf="@id/tv_splash_title_top" />

        <TextView
            android:id="@+id/tv_splash_title_bottom"
            style="@style/Gmarket.Weight500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="힙하다"
            app:layout_constraintTop_toBottomOf="@id/view_splash_under_top"
            android:layout_marginTop="13dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/tv_splash_title_top"
            android:textSize="36sp" />

        <View
            android:id="@+id/view_splash_under_bottom"
            android:layout_width="29dp"
            android:layout_height="@dimen/spacing_4"
            android:layout_marginStart="@dimen/spacing_2"
            android:background="@color/primary_green"
            app:layout_constraintStart_toStartOf="@id/tv_splash_title_bottom"
            app:layout_constraintTop_toBottomOf="@id/tv_splash_title_bottom" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
