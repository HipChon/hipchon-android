<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_save_place_title"
            style="@style/Gmarket.Weight500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_24"
            android:text="러스틱 카페"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_save_place_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_20"
            android:text="카페 / 식당"
            android:textColor="@color/gray06"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintStart_toStartOf="@id/tv_save_place_title"
            app:layout_constraintTop_toBottomOf="@id/tv_save_place_title" />

        <TextView
            android:id="@+id/tv_save_place_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_8"
            android:text="서울특별시 용산구 서빙고"
            android:textColor="@color/gray06"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintStart_toStartOf="@id/tv_save_place_title"
            app:layout_constraintTop_toBottomOf="@id/tv_save_place_type" />

        <ImageView
            android:id="@+id/iv_save_place_save_count"
            android:layout_width="12dp"
            android:layout_height="14dp"
            android:layout_marginTop="@dimen/spacing_8"
            android:background="@drawable/ic_save_filled"
            android:backgroundTint="@color/gray03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_save_place_address" />

        <TextView
            android:id="@+id/tv_save_place_save_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="52"
            android:textColor="@color/gray04"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintBottom_toBottomOf="@id/iv_save_place_save_count"
            app:layout_constraintStart_toEndOf="@id/iv_save_place_save_count"
            app:layout_constraintTop_toTopOf="@id/iv_save_place_save_count" />

        <ImageView
            android:id="@+id/iv_save_place_feed_count"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/ic_feed_filled"
            android:backgroundTint="@color/gray03"
            app:layout_constraintBottom_toBottomOf="@id/iv_save_place_save_count"
            app:layout_constraintStart_toEndOf="@id/tv_save_place_save_count"
            app:layout_constraintTop_toTopOf="@id/iv_save_place_save_count" />

        <TextView
            android:id="@+id/tv_save_place_feed_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="13"
            android:textColor="@color/gray04"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintBottom_toBottomOf="@id/tv_save_place_save_count"
            app:layout_constraintStart_toEndOf="@id/iv_save_place_feed_count"
            app:layout_constraintTop_toTopOf="@id/tv_save_place_save_count" />

        <ImageView
            android:id="@+id/iv_save_place_thumb"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_rectangle_radius_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_save_place_title" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_12"
            android:layout_marginBottom="17dp"
            android:background="@drawable/bg_rectangle_radius_2"
            android:backgroundTint="@color/gray01"
            android:paddingHorizontal="10dp"
            android:paddingVertical="@dimen/spacing_12"
            android:text="메모"
            android:textColor="@color/gray05"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_save_place_thumb" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
