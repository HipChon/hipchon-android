<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_item_home_place_thumbnail"
                android:layout_width="350dp"
                android:layout_height="166dp"
                android:background="@drawable/ic_launcher_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/bg_circle_black_alpha_50"
                app:layout_constraintBottom_toBottomOf="@id/iv_item_home_place_save"
                app:layout_constraintEnd_toEndOf="@id/iv_item_home_place_save"
                app:layout_constraintStart_toStartOf="@+id/iv_item_home_place_save"
                app:layout_constraintTop_toTopOf="@id/iv_item_home_place_save" />

            <ImageView
                android:id="@+id/iv_item_home_place_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_save"
                android:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="@id/iv_item_home_place_thumbnail"
                app:layout_constraintTop_toTopOf="@id/iv_item_home_place_thumbnail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_rectangle_radius_9"
                android:paddingHorizontal="5dp"
                android:text="1 / 8"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/iv_item_home_place_thumbnail"
                app:layout_constraintEnd_toEndOf="@id/iv_item_home_place_thumbnail" />

            <TextView
                android:id="@+id/tv_item_home_place_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="[강원도] 러스틱 라이프 카페"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_item_home_place_thumbnail" />

            <TextView
                android:id="@+id/tv_item_home_place_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:text="거리 정보"
                android:textColor="@color/gray_place_distance"
                app:layout_constraintBottom_toBottomOf="@id/tv_item_home_place_title"
                app:layout_constraintStart_toEndOf="@id/tv_item_home_place_title"
                app:layout_constraintTop_toTopOf="@id/tv_item_home_place_title" />

            <TextView
                android:id="@+id/tv_item_home_place_keyword_1st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_rectangle_radius_15"
                android:backgroundTint="@color/primary_green"
                android:paddingHorizontal="7dp"
                android:text="3인가능"
                app:layout_constraintStart_toStartOf="@id/tv_item_home_place_title"
                app:layout_constraintTop_toBottomOf="@id/tv_item_home_place_title" />

            <TextView
                android:id="@+id/tv_item_home_place_keyword_2nd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_rectangle_radius_15"
                android:backgroundTint="@color/secondary_yellow"
                android:paddingHorizontal="7dp"
                android:text="3인가능"
                app:layout_constraintStart_toEndOf="@id/tv_item_home_place_keyword_1st"
                app:layout_constraintTop_toTopOf="@id/tv_item_home_place_keyword_1st" />

            <TextView
                android:id="@+id/tv_item_home_place_keyword_3rd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_rectangle_radius_15"
                android:backgroundTint="@color/secondary_blue"
                android:paddingHorizontal="7dp"
                android:text="3인가능"
                app:layout_constraintStart_toEndOf="@id/tv_item_home_place_keyword_2nd"
                app:layout_constraintTop_toTopOf="@id/tv_item_home_place_keyword_1st" />

            <ImageView
                android:id="@+id/iv_item_home_place_save_count"
                android:layout_width="12dp"
                android:layout_height="14dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_save_filled"
                android:backgroundTint="@color/gray03"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_item_home_place_keyword_1st" />

            <TextView
                android:id="@+id/tv_item_home_place_save_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="52"
                android:textColor="@color/gray05"
                app:layout_constraintBottom_toBottomOf="@id/iv_item_home_place_save_count"
                app:layout_constraintStart_toEndOf="@id/iv_item_home_place_save_count"
                app:layout_constraintTop_toTopOf="@id/iv_item_home_place_save_count" />

            <ImageView
                android:id="@+id/iv_item_home_place_feed_count"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/ic_feed_filled"
                android:backgroundTint="@color/gray03"
                app:layout_constraintBottom_toBottomOf="@id/iv_item_home_place_save_count"
                app:layout_constraintStart_toEndOf="@id/tv_item_home_place_save_count"
                app:layout_constraintTop_toTopOf="@id/iv_item_home_place_save_count" />

            <TextView
                android:id="@+id/tv_item_home_place_feed_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="13"
                android:textColor="@color/gray05"
                app:layout_constraintBottom_toBottomOf="@id/tv_item_home_place_save_count"
                app:layout_constraintStart_toEndOf="@id/iv_item_home_place_feed_count"
                app:layout_constraintTop_toTopOf="@id/tv_item_home_place_save_count" />

            <TextView
                android:id="@+id/tv_item_home_place_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="1,000,000원부터"
                app:layout_constraintBottom_toBottomOf="@id/iv_item_home_place_save_count"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_item_home_place_save_count" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
