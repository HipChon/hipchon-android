<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_16"
        app:cardCornerRadius="@dimen/spacing_2"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="7">

            <ImageView
                android:id="@+id/iv_home_weekly_hip_place_thumbnail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:scaleType="centerCrop"
                android:src="@color/black" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/tv_home_weekly_hip_place_title"
                    style="@style/Gmarket.Weight500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_16"
                    android:layout_marginTop="22dp"
                    android:text="장소명"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_home_weekly_hip_place_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_20"
                    android:background="@drawable/ic_save"
                    android:backgroundTint="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/tv_home_weekly_hip_place_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_home_weekly_hip_place_title" />

                <TextView
                    android:id="@+id/tv_home_weekly_hip_place_area"
                    style="@style/Gmarket.Weight500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:text="지역"
                    android:textColor="@color/gray05"
                    android:textSize="@dimen/text_size_12"
                    app:layout_constraintStart_toStartOf="@id/tv_home_weekly_hip_place_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_home_weekly_hip_place_title" />

                <LinearLayout
                    android:id="@+id/ll_home_weekly_hip_place_keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_rectangle_radius_5_filled"
                    android:backgroundTint="@color/yellow_kakao_counseling"
                    android:gravity="center"
                    android:paddingHorizontal="7dp"
                    android:paddingVertical="5dp"
                    app:layout_constraintStart_toStartOf="@id/tv_home_weekly_hip_place_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_home_weekly_hip_place_area">

                    <ImageView
                        android:id="@+id/iv_home_weekly_hip_place_keyword"
                        android:layout_width="@dimen/spacing_12"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_water" />

                    <TextView
                        android:id="@+id/tv_home_weekly_hip_place_keyword"
                        style="@style/Gmarket.Weight500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_8"
                        android:text="주차하기 용이해요"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_home_weekly_hip_place_save_count"
                    android:layout_width="12dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/ic_save_filled"
                    android:backgroundTint="@color/gray03"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/ll_home_weekly_hip_place_keyword"
                    app:layout_constraintTop_toBottomOf="@id/ll_home_weekly_hip_place_keyword" />

                <TextView
                    android:id="@+id/tv_home_weekly_hip_place_save_count"
                    style="@style/Gmarket.Weight500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="52"
                    android:textColor="@color/gray04"
                    android:textSize="@dimen/text_size_12"
                    app:layout_constraintBottom_toBottomOf="@id/iv_home_weekly_hip_place_save_count"
                    app:layout_constraintStart_toEndOf="@id/iv_home_weekly_hip_place_save_count"
                    app:layout_constraintTop_toTopOf="@id/iv_home_weekly_hip_place_save_count" />

                <ImageView
                    android:id="@+id/iv_home_weekly_hip_place_feed_count"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/ic_feed_filled"
                    android:backgroundTint="@color/gray03"
                    app:layout_constraintBottom_toBottomOf="@id/iv_home_weekly_hip_place_save_count"
                    app:layout_constraintStart_toEndOf="@id/tv_home_weekly_hip_place_save_count"
                    app:layout_constraintTop_toTopOf="@id/iv_home_weekly_hip_place_save_count" />

                <TextView
                    android:id="@+id/tv_home_weekly_hip_place_feed_count"
                    style="@style/Gmarket.Weight500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="13"
                    android:textColor="@color/gray04"
                    android:textSize="@dimen/text_size_12"
                    app:layout_constraintBottom_toBottomOf="@id/tv_home_weekly_hip_place_save_count"
                    app:layout_constraintStart_toEndOf="@id/iv_home_weekly_hip_place_feed_count"
                    app:layout_constraintTop_toTopOf="@id/tv_home_weekly_hip_place_save_count" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
